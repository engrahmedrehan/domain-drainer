{
  "manifest_version": 3,
  "name": "Asset Thief",
  "version": "1.0.0",
  "description": "Extract SVGs, images, and compute Tailwind classes.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["hacker.css"],
      "js": ["content.js"]
    }
  ]
}